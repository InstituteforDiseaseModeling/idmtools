rule all:
    input:
        "test_interventions.id",
        "run_scenarios.id",
        "run_sim.id",
        "simple.id",
        "cli.id"



rule build_base:
    input:
        "../ubuntu-20-04/ubuntu_20_04_base.def"
    output:
        "ubuntu.id"
    shell:
        "python3 build_ubuntu_base.py"

rule build_covasim:
    input:
        "covasim_req.def",
        "ubuntu.id"
    output:
        "covasim.id"
    shell:
        "python3 create_covasim_sif.py"

rule cli:
    input:
        "covasim.id"
    output:
        "cli.id"
    shell:
        "python3 run_covasim_cli_script.py"

rule interventions:
    input:
        "covasim.id",
        "inputs/test_interventions.py"
    output:
        "test_interventions.id"
    shell:
        "python3 run_covasim_interventions.py"

rule scenarios:
    input:
        "covasim.id",
        "inputs/run_scenarios.py"
    output:
        "run_scenarios.id"
    shell:
        "python3 run_covasim_scenarios.py"

rule sim:
    input:
        "covasim.id",
        "inputs/run_sim.py"
    output:
        "run_sim.id"
    shell:
        "python3 run_covasim_sim.py"

rule simple:
    input:
        "covasim.id",
        "inputs/simple.py"
    output:
        "simple.id"
    shell:
        "python3 run_covasim_simple.py"