Bootstrap: docker
From: rockylinux:8.5

%post
    dnf -y install python39
    dnf -y install python39-devel
    dnf -y install snappy
    #dnf -y install gcc
    dnf -y install mpich
    dnf -y install sudo
    dnf -y install epel-release
    #dnf -y install screen
    dnf clean all

    python3 -m pip install pip --upgrade
    python3 -m pip install emod-api -i https://packages.idmod.org/api/pypi/pypi-production/simple
    python3 -m pip install pandas pytest
    ln -s /usr/bin/python3 /usr/bin/python

%runscript


%environment
    export PATH=$PATH:/usr/lib64/mpich/bin
    export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/lib64/mpich/lib

%test


%labels
    Author jbloedow@idmod.org

%help
    Minimal container for running EMOD using emod-api for file support.